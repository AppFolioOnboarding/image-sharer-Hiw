<p id="notice"><%= notice %></p>

<p>
  <% if @image != nil then %>
    <strong>Image:</strong>
    <img src='<%= @image.url %>' />
    <p>
      <strong>Tags:</strong>
      <ul>
        <% @image.tag_list.each do |tag| %>
          <li><%= link_to tag, "/images/tags/#{tag}" %></li>
        <% end %>
      </ul>
    </p>

    <br />
    <%= link_to 'Back', new_image_path %>
  <% else %>
    <strong>No Image Found :(</strong>
  <% end %>
</p>
